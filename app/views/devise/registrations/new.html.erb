<h2 class="sign-up-title">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), data:{turbo:false}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field-container-reg-new">
    <div class="field">
      <%= f.label :name, :class => 'field-label' %><br />
      <%= f.text_field :name, autofocus: true, :class => 'field-text' %>
    </div>
    <div class="field">
      <%= f.label :email, :class => 'field-label' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'field-text' %>
    </div>
    <div class="field">
      <%= f.label :bio, :class => 'field-label' %><br />
      <%= f.text_area :bio, autofocus: true, :class => 'field-text' %>
    </div>
    <div class="field">
      <%= f.label :photo, :class => 'field-label' %><br />
      <%= f.text_field :photo, autofocus: true, :class => 'field-text' %>
    </div>

    <div class="field">
      <%= f.label :password, :class => 'field-label' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", :class => 'field-text' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, :class => 'field-label' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'field-text' %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up" , :class => 'field-label' %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
  
<% end %>


